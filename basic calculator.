
# include <iostream>
using namespace std;

int main()
{
    char sym;
    float num1, num2;

    cout << "Enter symbol either + or - or * or /: ";
    cin >> sym;

    cout << "Enter two numbers: ";
    cin >> num1 >> num2;

    switch(sym)
    {
        case '+':
            cout << num1+num2;
            break;

        case '-':
            cout << num1-num2;
            break;

        case '*':
            cout << num1*num2;
            break;

        case '/':
            cout << num1/num2;
            break;

        default:
            // If the operator is other than +, -, * or /, error message is shown
            cout << "Error! operator is not correct";
            break;
    }

    return 0;
}
